{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./doc-page-counter/dist",
    "rootDir": "./doc-page-counter/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "./doc-page-counter/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./doc-page-counter/dist",
    "**/*.test.ts"
  ]
}

